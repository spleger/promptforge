{
  "manifest_version": 3,
  "name": "PromptForge - AI Prompt Enhancer",
  "version": "1.0.0",
  "description": "Transform casual descriptions into optimized AI prompts instantly",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://promptforge.vercel.app/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "enhance-selected": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Enhance selected text"
    },
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Open quick enhancer"
    }
  }
}
