datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Prompt {
  id             String   @id @default(cuid())
  userId         String   // Clerk User ID
  originalInput  String   @db.Text
  enhancedOutput String   @db.Text
  modelUsed      String
  enhancement    String   // JSON string of enhancement details
  createdAt      DateTime @default(now())
  
  // Self-relation for edit history
  parentId       String?
  parent         Prompt?  @relation("PromptHistory", fields: [parentId], references: [id])
  children       Prompt[] @relation("PromptHistory")

  @@index([userId])
  @@index([parentId])
}

model UserSettings {
  id              String   @id @default(cuid())
  userId          String   @unique
  defaultModel    String   @default("claude-sonnet-4-5-20250929")
  defaultLevel    String   @default("standard")
  enabledSites    String[] @default(["chatgpt.com", "claude.ai", "gemini.google.com", "notebooklm.google.com"])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
}
