datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Prompt {
  id             String   @id @default(cuid())
  userId         String   // Clerk User ID
  originalInput  String   @db.Text
  enhancedOutput String   @db.Text
  modelUsed      String
  enhancement    String   // JSON string of enhancement details
  createdAt      DateTime @default(now())
  
  // Self-relation for edit history
  parentId       String?
  parent         Prompt?  @relation("PromptHistory", fields: [parentId], references: [id])
  children       Prompt[] @relation("PromptHistory")

  @@index([userId])
  @@index([parentId])
}
